<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/background_color">

    <RelativeLayout
        android:id="@+id/footer_menu"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:background="#2A3C25">

        <Button
            android:id="@+id/button_search"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_button"
            android:text="@string/search"
            android:textColor="#FFFCFC"
            android:textSize="15sp"
            android:layout_marginStart="45dp"
            android:layout_alignParentStart="true"/>

        <Button
            android:id="@+id/button_home"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_button"
            android:text="@string/button_home"
            android:textColor="#FFFCFC"
            android:textSize="15sp"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/button_profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/rounded_button"
            android:text="@string/profile"
            android:textColor="#FFFCFC"
            android:textSize="15sp"
            android:layout_marginEnd="45dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="-5dp"
        android:background="#2A3C25">

        <Button
            android:id="@+id/button_help"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="11dp"
            android:background="@drawable/rounded_button"
            android:text="@string/question_mark"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer_menu"
        android:layout_below="@id/home_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/launcherlogo"
                android:contentDescription="@string/imageview_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/what_is_eatright"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="@string/about_eatRight"
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help1"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="@string/help1_1"
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:text="@string/help2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="@string/help2_2"
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:text="@string/help3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="@string/help3_3"
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginStart="20dp"
                android:text="@string/help4"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="@string/help4_4"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
